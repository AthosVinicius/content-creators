// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Creator {
    id           String @id @default(uuid())
    avatar       String @db.LongText
    name         String
    default_user String
    career       String
    instagram    String
    tiktok       String
    twitter      String
    youtube      String
    github       String
    linkedin     String
    facebook     String
    twitch       String
    discord      String
    website      String
}
